extends layout

block header

block stylesheets
    link(rel="stylesheet", href="/stylesheets/results.css")

block content
    //- nav.navbar#navbar
        //- FIX RESPONSIVENESS
        div.navbar-fixed-clear(
                data-top="@class:navbar-fixed-top-clear"
                data--0p-top="@class:navbar-fixed-top"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP
    if message && message.length
        p#alert.alert.alert-danger(role="alert") #{message}

    if logout
        div.logout
            a(href="/logout")
                button logout

    section.results#results
        div.container
            div.wrapper
                div.title
                    h3 Your results!
                    
                    if results.length
                        each result in results
                            p #{result.firstname} #{result.lastname} #{result}
                    else
                        p you don't have any results :(

    section.footer#footer
        div.container
            h5
                | wistful worldly wanderers 
                img.icon(src="/images/3w.png")
                |  2015
