extends layout

block header
    script(src='/javascripts/style.js')

block stylesheets
    link(rel="stylesheet", href="/stylesheets/request.css")

block content
    nav.navbar#navbar
        //- FIX RESPONSIVENESS
        div.navbar-fixed-clear(
                data-top="@class:navbar-fixed-top-clear"
                data--0p-top="@class:navbar-fixed-top"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP

    section.request#request
        div.container
            div.wrapper
                div.title
                    h3 Hitch me a ride
                div.req-form
                    form.form-horizontal
                        div.form-group
                            input#fullName.form-control(type='text', placeholder='Enter full name.')
                        div.form-group
                            input#pickup.form-control(type='text', placeholder='e.g. 305 Memorial Drive Cambridge, MA 02139')
                        div.form-group
                            input#dropoff.form-control(type='text', placeholder= 'e.g. Boston Logan Airport')
                        div.form-group
                            button(type='submit') Submit
                    if message && message.length > 0
                        p#alert.alert.alert-success(role='alert') #{message}