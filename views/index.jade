extends layout

block header

block stylesheets

block content
    nav.navbar#navbar
        div.navbar-fixed-top(
                data-start="@id:clear"
                data-95p="@id:black"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="/login") login
                        li: a(href="/#signup", onclick="javascript:document.getElementById('firstname').focus()") sign up

    if message && message.length
        p#alert.alert.alert-danger(role="alert") #{message}

    section.main#main
        div.container(
                data-center="background-position: 50% 0px"
                data-top-bottom="background-position: 50% -100px"
                data-anchor-target="#main")
            div.wrapper#box(
                    data-top="opacity:1"
                    data-top-bottom="opacity:0"
                    data-anchor-target="#box")
                div.title
                    h1 hitch
                hr.line
                div.subtitle
                    h3 hitch a ride to
                    span.typed
                div.button-wrapper
                    a(href="/#signup", onclick="javascript:document.getElementById('firstname').focus()")
                        button get started

    section.about#about
        div.container
            div.wrapper
                div.title
                    h3 making ridesharing easier than ever
                hr.line
                div.subtitle
                    h4 hitch finds people for you to share rides with. it's fast, simple, and best of all, it saves you money.

    section.signup#signup
        div.container(
                data-bottom-top="background-position: 50% 100px"
                data-center="background-position: 50% 0px"
                data-anchor-target="#signup")
            div.wrapper#formbox(
                    data-bottom-top="opacity:0"
                    data-bottom="opacity:1"
                    data-anchor-target="#formbox")
                div.title
                    h2 sign up
                hr.line
                div.signup-wall
                    form.basic-form(action="/signup", method="POST")
                        div.row
                            div.col-sm-6
                                input#firstname.form-control(type="text", name="firstname", placeholder="first name")
                            div.col-sm-6
                                input#lastname.form-control(type="text", name="lastname", placeholder="last name")
                        input#username.form-control(type="text", name="username", placeholder="username")
                        input#password.form-control(type="password", name="password", placeholder="password")
                        input#password2.form-control(type="password", name="password2", placeholder="retype password")
                        input#phone.form-control(type="tel", name="phone", placeholder="phone")
                        div.button-wrapper
                            button(type="submit") submit

        div.footer#footer
            div.container
                h5
                    | wistful worldly wanderers 
                    img.icon(src="/images/3w.png")
                    |  2015

block scripts
    script(src="/javascripts/validation.js")
    script(src="/javascripts/typed.js")
