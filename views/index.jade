extends layout

block header

block stylesheets
    link(rel="stylesheet", href="/stylesheets/signup.css")

block content
    nav.navbar#navbar
        div.navbar-fixed-top(
                data-start="@id:clear"
                data-0p="@id:collapsed"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") login
                        li: a(href="#signup") sign up

    section.main#main
        div.container(
                data-center="background-position: 50% 0px"
                data-top-bottom="background-position: 50% -100px"
                data-anchor-target="#main")
            div.wrapper#box(
                    data-top="opacity:1"
                    data-top-bottom="opacity:0"
                    data-anchor-target="#box")
                div.title
                    h1 hitch
                hr.line
                div.subtitle
                    h3 hitch a ride to
                    span.typed
                div.button-wrapper
                    a(href="#request")
                        button hitch me a ride

    section.about#about
        div.container
            div.wrapper
                div.title
                    h3 making ridesharing easier than ever
                hr.line
                div.subtitle
                    h4 hitch finds people for you to share rides with. it's fast, simple, and best of all, it saves you money.

    section.signup#signup
        div.container(
            data-bottom-top="background-position: 50% 100px"
            data--60-center="background-position: 50% 0px"
            data-anchor-target="#signup")

            div.wrapper#formbox(
                data-bottom-top="opacity:0"
                data-bottom="opacity:1"
                data-anchor-target="#formbox")
                div.title
                    h3 Sign Up
                    hr.line
                div.signup-wall
                    form.basic-form(action="/", method="POST")
                        div.row
                            div.col-sm-6
                                input#firstname.form-control(type="text", name="firstname", placeholder="First Name", autofocus)
                            div.col-sm-6
                                input#lastname.form-control(type="text", name="lastname", placeholder="Last Name")
                        input#username.form-control(type="text", name="username", placeholder="Username")
                        input#password.form-control(type="password", name="password", placeholder="Password")
                        input#password2.form-control(type="password", name="password2", placeholder="Retype password")
                        input#phone.form-control(type="tel", name="phone", placeholder="Phone")
                        div.button-wrapper
                            button(type="submit") Submit

                    if message && message.length > 0
                        p#alert.alert.alert-danger(role='alert') #{message}


    section.footer#footer
        div.container
            h5
                | wistful worldly wanderers 
                img.icon(src="/images/3w.png")
                |  2015

    script(src="build/js/intlTelInput.min.js")
    script(src="/javascripts/signupValidation.js")

    //- ONE TIME REQUEST FEATURE
        section.request#request
            div.container(
                    data-bottom-top="background-position: 50% 100px"
                    data--60-center="background-position: 50% 0px"
                    data-anchor-target="#request")
                div.wrapper#formbox(
                        data-bottom-top="opacity:0"
                        data-bottom="opacity:1"
                        data-anchor-target="#formbox")
                    div.title
                        h2 hitch a ride
                    hr.line
                    div.signup-wall
                        form.basic-form(action="/request", method="POST")
                            div.row
                                div.col-sm-6
                                    input#firstname.form-control(type="text", name="firstname", placeholder="First Name", autofocus)
                                div.col-sm-6
                                    input#lastname.form-control(type="text", name="lastname", placeholder="Last Name")
                            input#pickup.form-control(type="text", name="pickup", placeholder="Pickup")
                            input#dropoff.form-control(type="text", name="dropoff", placeholder="Dropoff")
                            input#time.form-control(type="datetime-local", name="time", placeholder="mm/dd/yyyy hh:mm")
                            input#phone.form-control(type="tel", name="phone", placeholder="Phone")
                            div.button-wrapper
                                button request