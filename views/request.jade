extends layout

block header
    script(src='/javascripts/style.js')

block stylesheets
    link(rel="stylesheet", href="/stylesheets/request.css")

block content
    nav.navbar#navbar
        //- FIX RESPONSIVENESS
        div.navbar-fixed-clear(
                data-top="@class:navbar-fixed-top-clear"
                data--0p-top="@class:navbar-fixed-top"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP

    section.request#request
        div.container
            div.wrapper
                div.title
                    h3 Hitch me a ride
                div.req-form
                    form.form-horizontal
                        div.form-group
                            input#firstName.form-control(type='text', name='firstName', placeholder='First Name', required, autofocus)
                        div.form-group
                            input#lastName.form-control(type='text', name='lastName', placeholder='Last Name', required)
                        div.form-group
                            input#pickup.form-control(type='text', placeholder='Pickup', required)
                        div.form-group
                            input#dropoff.form-control(type='text', placeholder= 'Dropoff', required)
                        div.form-group
                            input#time.form-control(type='datetime-local', placeholder= 'When?', required)
                        div.form-group
                            input#phone.form-control(type='tel', name='phone', placeholder='xxx-xxx-xxxx', required)
                            span#valid-msg.hide âœ“ Valid
                            span#error-msg.hide Invalid number
                        div.form-group
                            button Submit
                    if message && message.length > 0
                        p#alert.alert.alert-success(role='alert') #{message}