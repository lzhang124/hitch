extends layout

block header
    script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places")
    script(src='/javascripts/dateValidation/picker.js')
    script(src='/javascripts/dateValidation/picker.date.js')    
    script(src='/javascripts/dateValidation/picker.time.js')
    script(src='/javascripts/request.js')

block stylesheets
    link(rel="stylesheet", href="/stylesheets/request.css")
    link(rel="stylesheet", href="/stylesheets/default.css")
    link(rel="stylesheet", href="/stylesheets/default.date.css")
    link(rel="stylesheet", href="/stylesheets/default.time.css")

block content
    nav.navbar#navbar
        div.navbar-fixed-top(
                data-start="@id:clear"
                data-0p="@id:collapsed"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="/logout") LOGOUT

    section.request#request
        div.container
            div.wrapper
                div.title
                    h6 hitch me a ride
                    hr.line
                 div.signup-wall
                    form.basic-form(method="POST")
                        div.form-group
                            input#pickup.form-control(type='text', name='pickup', placeholder='Pickup', onfocus='initialize()', autofocus)
                            input#pickup_loc.form-control(type='hidden', name='pickup_loc')
                            input#dropoff.form-control(type='text', name='dropoff', placeholder='Dropoff')
                            input#dropoff_loc.form-control(type='hidden', name='dropoff_loc')
                            div.row
                                div.col-sm-6
                                    input#date.form-control(name='date', placeholder='Pickup Date')
                                div.col-sm-6
                                    input#time.form-control(name='time', placeholder='Pickup Time')
                            div.button-wrapper
                                button(type="submit") request

                    if message && message.length > 0
                        p#alert.alert.alert-success(role='alert') #{message}

block scripts
