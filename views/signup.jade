extends layout

block header
    script(src='/javascripts/style.js')
    //- script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="build/js/intlTelInput.js")

block stylesheets
    link(rel="stylesheet", href="/stylesheets/signup.css")

block content
    nav.navbar#navbar
        //- FIX RESPONSIVENESS
        div.navbar-fixed-clear(
                data-top="@class:navbar-fixed-top-clear"
                data--0p-top="@class:navbar-fixed-top"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP
    
    section.signup#signup
        div.container
            div.wrapper
                div.title
                    h3 Sign Up
                div.signup-wall
                    form#signupform.form-signin(method='post')
                        div.form-group
                            input#firstName.form-control(type='text', name='firstName', placeholder='First Name', required, autofocus)
                        div.form-group
                            input#lastName.form-control(type='text', name='lastName', placeholder='Last Name', required)
                        div.form-group   
                            input#username.form-control(type='email', name='username', placeholder='Email', required)
                        div.form-group
                            input#password.form-control(type='password', name='password', placeholder='Password', required)
                        div.form-group
                            input#password2.form-control(type='password', name='password2', placeholder='Confirm Password', required)
                        div.form-group
                            input#phone.form-control(type='tel', name='phone', placeholder='xxx-xxx-xxxx', required)
                            span#valid-msg.hide âœ“ Valid
                            span#error-msg.hide Invalid number
                        div.form-group
                            button Submit
                    //- Server side validation error display
                    if message && message.length > 0
                        p#alert.alert.alert-danger(role='alert') #{message}
                    //- Client side validation error display
                    //- p.error 

    script(src='/javascripts/constraintvalidation.js')