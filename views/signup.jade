extends layout

block header
    script(src='/javascripts/style.js')

block stylesheets
    link(rel="stylesheet", href="/stylesheets/signup.css")

block content
    nav.navbar#navbar
        div.navbar-fixed-top(
                data-start="@id:clear"
                data-0p="@id:collapsed"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP
    
    section.signup#signup
        div.container
            div.wrapper
                div.title
                    h3 Sign Up
                div.signup-wall
                    form.form-signin(action='/signup', method='POST')
                        input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
                        input(type='password', name='password', class='form-control', placeholder='Password', required)
                        input(type='email', name='email', class='form-control', placeholder='Email',required)
                        input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
                        input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
                        button(class='btn btn-lg btn-primary btn-block', type='submit') SignUp
