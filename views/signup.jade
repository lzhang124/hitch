extends layout

block header
    script(src="/javascripts/signup.js")

block stylesheets
    link(rel="stylesheet", href="/stylesheets/signup.css")

block content
    //- nav.navbar#navbar
        div.navbar-fixed-top(
                data-start="@id:clear"
                data-0p="@id:collapsed"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP

    section.signup#signup
        div.container(
            data-bottom-top="background-position: 50% 100px"
            data--60-center="background-position: 50% 0px"
            data-anchor-target="#signup")

            div.wrapper#formbox(
                data-bottom-top="opacity:0"
                data-bottom="opacity:1"
                data-anchor-target="#formbox")
                div.title
                    h3 Sign Up
                    hr.line
                div.signup-wall
                    form.basic-form(method="POST")
                        div.row
                            div.col-sm-6
                                input#firstname.form-control(type="text", name="firstName", placeholder="First Name", autofocus)
                            div.col-sm-6
                                input#lastname.form-control(type="text", name="lastName", placeholder="Last Name")
                        input#username.form-control(type="text", name="username", placeholder="Username")
                        input#password.form-control(type="password", name="password", placeholder="Password")
                        input#password2.form-control(type="password", name="password2", placeholder="Retype password")
                        input#phone.form-control(type="tel", name="phone", placeholder="Phone")
                        div.button-wrapper
                            button(type="submit") Submit

                    if message && message.length > 0
                        p#alert.alert.alert-danger(role="alert") #{message}
