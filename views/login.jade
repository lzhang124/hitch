extends layout

block header
    script(src='/javascripts/style.js')

block stylesheets
    link(rel="stylesheet", href="/stylesheets/signup.css")

block content
    nav.navbar#navbar
        //- FIX RESPONSIVENESS
        div.navbar-fixed-clear(
                data-top="@class:navbar-fixed-top-clear"
                data--0p-top="@class:navbar-fixed-top"
                data-anchor-target="#navbar")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.page-scroll(href="/") hitch
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#basic_nav")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div.collapse.navbar-collapse#basic_nav
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="login") LOGIN
                        li: a(href="signup") SIGN UP

    section.signup#login
        div.container
            div.wrapper
                div.title
                    h3 Login
                div.signup-wall
                    form.form-signin(method='post')
                        div.form-group  
                            input#username.form-control(type='email', name='username', placeholder='Enter email', required, autofocus)
                        div.form-group
                            input#pwd.form-control(type='password', name='password', placeholder='Enter password', required)
                        //- div.form-group
                        //-     div.col-sm-10.col-sm-offset-2
                        //-         div.checkbox
                        //-             label
                        //-                 input(type="checkbox")
                        //-                 p Remember me
                        div.form-group
                            button Submit
                    if message && message.length > 0
                        p#alert.alert.alert-danger(role='alert') #{message}